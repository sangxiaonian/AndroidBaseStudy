<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="study.sang.androidbasestudy.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tb"
        android:layout_height="wrap_content"
        toolbar:logo="@mipmap/ic_launcher"
        toolbar:title="@string/app_name"
        android:minHeight="?attr/actionBarSize"
        toolbar:navigationIcon="@drawable/ic_toc_white_24dp"
        android:background="?attr/colorPrimary"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="跑步的小球" />


            <Button
                android:id="@+id/bt_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SeekBar和星级进度" />


            <Button
                android:id="@+id/bt_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="各类吐司" />


            <Button
                android:id="@+id/bt_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通知（沉浸式）" />

            <Button
                android:id="@+id/bt_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹窗" />

            <Button
                android:id="@+id/bt_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义控件" />

            <Button
                android:id="@+id/bt_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fragment" />


            <Button
                android:id="@+id/bt_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照" />

            <Button
                android:id="@+id/viewStitvh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="各种切换视图" />

            <Button
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间相关的空间" />

            <Button
                android:id="@+id/bt_webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WebView" />

            <Button
                android:id="@+id/bt_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务" />

            <Button
                android:id="@+id/bt_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="进度条" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
