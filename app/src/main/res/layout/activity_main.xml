<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="study.sang.androidbasestudy.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="跑步的小球" />


            <Button
                android:id="@+id/bt_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SeekBar和星级进度" />


            <Button
                android:id="@+id/bt_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="各类吐司" />



            <Button
                android:id="@+id/bt_noti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通知（沉浸式）" />

            <Button
                android:id="@+id/bt_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹窗" />

            <Button
                android:id="@+id/bt_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自带头布局RecycleView" />

            <Button
                android:id="@+id/bt_frag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fragment" />


            <Button
                android:id="@+id/bt_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewStitvh"
                android:text="各种切换视图"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text="时间相关的空间"/>

            <Button
                android:id="@+id/bt_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
