<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!---->
            <ping.com.customprogress.DownLoadProgress
                android:background="#EC5745"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ping.com.customprogress.WaveBgProgress
                    android:id="@+id/pro_wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:custom_bg="@drawable/logowf"
                    app:custom_color="#fedcba"
                    app:custom_front="@drawable/logocolor" />

                <ping.com.customprogress.WaveBgProgress
                    android:id="@+id/pro_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:custom_bg="@drawable/logowf"
                    app:custom_color="#fedcba" />
            </LinearLayout>



            <study.sang.androidbasestudy.view.progress.HorizontalProgress
                android:id="@+id/pro_defaul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="5dp"
                app:progress_height="5dp"
                app:progress_text_size="15sp" />

            <study.sang.androidbasestudy.view.progress.HorizontalProgress
                android:id="@+id/pro_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:padding="5dp"
                android:progress="50"
                app:progress_height="5dp"

                app:progress_text_color="#ffF53B03"
                app:progress_text_offset="5dp"
                app:progress_text_size="15sp"
                app:progress_unreached_color="#ffF7C6B7" />

            <study.sang.androidbasestudy.view.progress.RoundProgressBarWidthNumber
                android:id="@+id/pro_roun_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="5dp"
                android:progress="30"
                app:progress_text_size="15sp" />

            <study.sang.androidbasestudy.view.progress.RoundProgressBarWidthNumber

                android:id="@+id/pro_roun_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:progress="50"
                app:RoundProgressBarWidthNumber_radius="50dp"
                app:progress_height="5dp"
                app:progress_text_color="#ffF53B03"
                app:progress_text_size="15sp" />

            <study.sang.androidbasestudy.view.progress.SquareWaveView
                android:id="@+id/wave"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#abcedf" />

            <study.sang.androidbasestudy.view.progress.CircleWaveView
                android:id="@+id/criwave"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="#abcedf" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
