<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="study.sang.androidbasestudy.activity.ProgressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <study.sang.androidbasestudy.view.progress.HorizontalProgress
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="5dp"
                app:progress_height="5dp"
                app:progress_text_size="15sp"
                android:id="@+id/pro_defaul"
                />

            <study.sang.androidbasestudy.view.progress.HorizontalProgress
                android:id="@+id/pro_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:padding="5dp"
                app:progress_text_offset="5dp"
                android:progress="50"
                app:progress_text_size="15sp"
                app:progress_text_color="#ffF53B03"
                app:progress_height="5dp"
                app:progress_unreached_color="#ffF7C6B7"
                />

            <study.sang.androidbasestudy.view.progress.RoundProgressBarWidthNumber
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="5dp"
                android:progress="30"
                app:progress_text_size="15sp"
                android:id="@+id/pro_roun_up"
                />
            <study.sang.androidbasestudy.view.progress.RoundProgressBarWidthNumber
                android:layout_width="match_parent"
                android:id="@+id/pro_roun_down"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:progress="50"
                app:progress_height="5dp"
                app:progress_text_color="#ffF53B03"
                app:progress_text_size="15sp"
                app:RoundProgressBarWidthNumber_radius="50dp"
                />

            <study.sang.androidbasestudy.view.progress.SquareWaveView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#abcedf"
                android:id="@+id/wave"
                />

            <study.sang.androidbasestudy.view.progress.CircleWaveView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/criwave"
                android:background="#abcedf"
                />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
