<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="study.sang.androidbasestudy.Tran.CustomActivity">

    <Button
        android:id="@+id/view_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带头布局的Recycle" />

    <Button
        android:id="@+id/view_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动态添加，多行多列RadioButton" />

    <Button
        android:id="@+id/cus_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="recycleView 万能适配器演示" />

    <Button
        android:id="@+id/cus_drag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="recycleView 拖动条目的设置" />

    <Button
        android:id="@+id/cus_shui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水波纹效果" />

    <Button
        android:id="@+id/cus_dragview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拖拽控件" />

    <Button
        android:id="@+id/cus_draw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义侧滑菜单" />

    <Button
        android:id="@+id/besizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="贝塞尔曲线" />

    <Button
        android:id="@+id/heart_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="满屏幕的心" />
    <Button
        android:id="@+id/index_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="指示器" />
    <Button
        android:id="@+id/stereo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3D控件" />

</LinearLayout>
